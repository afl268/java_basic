package superkeyword;

public class Airplane {
	// 비행기는 속도를 가진다.
	// 생성자는 속도를 입력받아 저장한다.
	
	protected int speed;
	
	public Airplane(int speed) {
		this.speed = speed;
	}
	// fly() 메서드를 정의하는데 속도가 500씩 붙는거야
	// 단, 일반비행기는 속도가 900초과 못 하는거야
	public void fly() {
		
		if ((speed + 500 ) > 900) {
			speed = 900;
		} else {
			speed += 500;
		}
		System.out.println("현재 비행기 시속" + speed + "km/h로 비행 중.");
	}
}
